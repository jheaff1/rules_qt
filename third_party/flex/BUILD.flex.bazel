
load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "all_srcs",
    srcs = glob(
        include = ["**"],
        exclude = ["*.bazel"],
    ),
)

configure_make(
    name = "flex",
    lib_source = ":all_srcs",
    out_binaries = ["flex"],
)

filegroup(
    name = "flex_exe",
    srcs = [":flex"],
    output_group = "flex",
)
