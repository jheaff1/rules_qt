load("@rules_foreign_cc//foreign_cc:defs.bzl", "meson")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "all_srcs",
    srcs = glob(["**"]),
)

meson(
    name = "libdrm",
    lib_source = ":all_srcs",
    out_lib_dir = "lib/x86_64-linux-gnu",
    out_shared_libs = [
        "libdrm_amdgpu.so",
        "libdrm_amdgpu.so.1",
        "libdrm_amdgpu.so.1.0.0",
        "libdrm_intel.so",
        "libdrm_intel.so.1",
        "libdrm_intel.so.1.0.0",
        "libdrm_nouveau.so",
        "libdrm_nouveau.so.2",
        "libdrm_nouveau.so.2.0.0",
        "libdrm_radeon.so",
        "libdrm_radeon.so.1",
        "libdrm_radeon.so.1.0.1",
        "libdrm.so",
        "libdrm.so.2",
        "libdrm.so.2.4.0",
    ],
    deps = ["@libpciaccess"],
)
