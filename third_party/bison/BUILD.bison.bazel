
load("@rules_foreign_cc//foreign_cc:defs.bzl", "configure_make")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "all_srcs",
    srcs = glob(
        include = ["**"],
        exclude = ["*.bazel"],
    ),
)

configure_make(
    name = "bison",
    lib_source = ":all_srcs",
    out_binaries = ["bison"],
)

filegroup(
    name = "bison_exe",
    srcs = [":bison"],
    output_group = "bison",
)
